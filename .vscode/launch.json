{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend - Flask (wsgi.py)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/wsgi.py",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/backend/.env",
      "env": {
        "FLASK_ENV": "development"
      },
      "justMyCode": true,
      "serverReadyAction": {
        "pattern": "Running on http://127\\.0\\.0\\.1:(\\d+)",
        "uriFormat": "http://127.0.0.1:%s/health",
        "action": "openExternally"
      }
    },
    {
      "name": "Frontend - Vite dev server",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Local:\\s*http://(?:localhost|127\\.0\\.0\\.1):(\\d+)",
        "uriFormat": "http://127.0.0.1:%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Open Frontend in Browser",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://127.0.0.1:5173",
      "webRoot": "${workspaceFolder}/frontend"
    }
  ],
  "compounds": [
    {
      "name": "Run All - Backend + Frontend + Browser",
      "configurations": [
        "Backend - Flask (wsgi.py)",
        "Frontend - Vite dev server",
        "Open Frontend in Browser"
      ]
    }
  ]
}
